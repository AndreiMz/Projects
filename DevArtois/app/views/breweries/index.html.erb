<table class="table table-hover">
  <thead>
    <th>Brewery Name</th>
    <th>Website</th>
    <th>Address</th>
  </thead>
  <tbody>
  <%@breweries.each do |brewery|%>
    <tr>
      <td><%=brewery.brewery_name%></td>
      
      <td><%=brewery.brewery_website%></td>
      <td><%=brewery.brewery_full_address%></td>
      <td><%=link_to 'Here',brewery_path(brewery), class: "btn btn-info"%></td>
      <td><%=link_to 'Edit',edit_brewery_path(brewery), class: "btn btn-default"%></td>
      <td><%= link_to "Delete",brewery, method: :delete,
                              data: { confirm: "You sure?" } , class: "btn btn-danger"%></td>
      

    </tr>
    <%end%>
  </tbody>
</table>

<%=  link_to "Add a new brewery please!", new_brewery_path, class:"btn btn-default", method: "get" %>
