

<h1 class='typography-display-3 text-center'>
  Channels
 <p id="notice" class='txt-primary'><%= notice %></p>
</h1>

<table class='table table-striped table-bordered'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>Channel Title</th>
      <th scope='col'>Channel URL</th>
      <th scope='col'>View</th>
      <th scope='col'>Modify</th>
      <th scope='col'>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.id %></td>
        <td><%= link_to channel.name,channels_iframe_path(channel.id)%></td>
        <td><%= channel.channel_url%></td>
        <td><%= button_to 'Show', channel_path(channel), method: :get, class: 'btn btn-info btn-block' %></td>
        <td><%= button_to 'Edit', edit_channel_path(channel), method: :get, class: 'btn btn-secondary btn-block' %></td>
        <td><%= button_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= button_to 'New Channel', new_channel_path, method: :get, class: 'btn btn-primary btn-block' %>
<br>
<div class='row justify-content-center'>
  <%= will_paginate %>
</div>
