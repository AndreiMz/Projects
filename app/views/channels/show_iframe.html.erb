<p id="notice"><%= notice %></p>

<div class='row justify-content-center'>
	<div class='col-6' align='center'>
		<div class='card'>
			<div class='card-title'>
				<p style='padding-top: 2rem'> Channel Name : <%= @channel.name %> </p>
				<p> Channel URL :<a href=<%=@channel.channel_url%>> <%= @channel.channel_url %></a> </p>
			</div>
			<div class='card-body'>
				<p> Videos : <% @yt_objs.each do |vid| %>
					<ul style ="padding:0; list-style-type: none;">
						<li class='embed-responsive embed-responsive-16by9'>
							<%= vid.embed_html.html_safe%>
						</li>
						<%end%>	
					</ul>
				</p>
				<%= button_to 'Back', channels_path, method: :get, class: 'btn btn-danger btn-block' %>
			</div>
		</div>
	</div>
</div>
<div class='row justify-content-center'>
	<%= will_paginate @videos%>
</div>

