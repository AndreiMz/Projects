<!DOCTYPE html>
<html>
  <head>
    <title>YouMimic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="container">
    <% flash.each do |key,value| %>
      <div class="alert alert-<%= key%>">
         <%= value %>
       </div>
    <% end %>
  </div>
  <%= yield :top_content %>
  <div class="container">
    <h1><%= yield :header%></h1>
  </div>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
        <li class="nav-item"><%= link_to 'Channels Table',channels_path %>&nbsp</li>
        <li class="nav-item"><%= link_to 'Videos Table', videos_path %>&nbsp</li>
        <li class="nav-item"><%= link_to 'Home' , root_path %>&nbsp</li>
        <li class="nav-item"><%= link_to 'Logout', destroy_user_session_path, method: :delete%>&nbsp</li>
        <li class="nav-item"><%= link_to 'Favorites', favorites_path%>&nbsp</li>
        <li class="nav-item"><%= link_to 'New Favorite',new_favorite_path%>&nbsp</li>
        <%else%>
        <li class="nav-item"><%= link_to 'Channels' , channels_path %>&nbsp</li>
        <li class="nav-item"><%= link_to 'Videos' , videos_path%>&nbsp</li>
        <li class="nav-item"><%= link_to 'Home' , root_path%>&nbsp</li>
        <% end %>

      </ul>
    </div>
      <ul class="navbar-nav pull-right">
        <% if user_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" value="test">
              <%= current_user.email %>
              <span class="caret"></span>
            </a>
          </li>
        <% else %>
          <li><%= link_to 'Log In', new_user_session_path %>&nbsp</li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  <body>
    <%= yield %>
    
  </body>
  
</html>
