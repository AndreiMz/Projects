<div class='row justify-content-md-center'>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='col justify-content-center' style='width: 40rem'>
    <h2 style='text-align: center'>Log in</h2>
    <div class="form-group form-check">
      <%= f.input :email, required: false, autofocus: true, input_html: {class: 'form-control'} %>
      <br>
      <%= f.input :password, required: false, input_html: {class: 'form-control'} %>
      <br>
      <%= f.input :remember_me, input_html: {class: 'form-control'}, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block' %>
    </div>
    <% end %>

    <div style='text-align:center'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>