<div class='row justify-content-md-center'>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class='col justify-content-md-center' style='width: 40rem'>
<h2>Log in</h2>
  <div class="form-group form-check">
    <%= f.input :email, required: false, autofocus: true, input_html: {class: 'form-control'} %>
    <br>
    <%= f.input :password, required: false, input_html: {class: 'form-control'} %>
    <br>
    <%= f.input :remember_me, input_html: {class: 'form-check-input'}, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>