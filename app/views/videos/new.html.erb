
<div class='row justify-content-center'>
	<div class='col-6'>
		<h1 style='text-align: center'>New Video</h1>
		<div class='form-group'>
			<%= simple_form_for @video do |data| %>
			<%= data.input :youtube_id, input_html: {class: 'form-control'} %>
			<br>
			<%= data.select(:channel_id, @channels.collect {|ch| [ch.name, ch.id]},{}, {class: 'form-control'})%>
			<br>
			<%= data.button :submit, class: 'btn btn-primary btn-block' %>
			<%end%>
		</div>
		<%= button_to 'Back', videos_path, method: :get, class: 'btn btn-danger btn-block' %>
	</div>
</div>